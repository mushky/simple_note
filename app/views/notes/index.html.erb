<%= render 'shared/header' %>
<%= render 'shared/search_bar' %>

<div class="row">
	<div class="col-lg-12">
		<% @notes.each do |note| %>
			<div class="notes">
				<div class="card">
					<div class="card-body <%= cycle('even-card', 'odd-card') -%>">
						<%= link_to note.title, note_path(note) %>
						<%= markdown(note.description.truncate(200, separator: '\n')) %>
					</div> <!-- /card-body -->
				</div> <!-- /card -->
			</div> <!-- /notes -->
		<% end %>
	</div>
</div> <!-- /row -->
<%= pagy_nav(@pagy).html_safe %>